<header>
  <nav class="navbar navbar-light navbar-expand-md">
    <div class="container-fluid">
      <%= link_to (t 'defaults.app_title'), root_path, class: 'navbar-brand text-dark' %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto mb-2 mb-md-0">
          <li class="nav-item">
            <%= link_to '投稿一覧', '#', class: "nav-link active text-dark" %>
          </li>

          <% if !current_user %>
            <li class="nav-item">
              <%= link_to '会員登録', new_user_path, class: "nav-link active text-dark" %>
            </li>

            <li class="nav-item">
              <%= link_to 'ログイン', login_path, class: "nav-link active text-dark" %>
            </li>

          <% else %>
            <li class="nav-item">
              <%= link_to 'ログアウト', logout_path, data: {turbo_method: :delete}, class: "nav-link active text-dark"%>
            </li>

            <li class="nav-item">
              <%= link_to 'マイページ', user_path(current_user), class: "nav-link active text-dark" %>
            </li>

          <% end %>
        </ul>
      </div>

    </div>
  </nav>
</header>